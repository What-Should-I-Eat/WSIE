{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../js",
    "types": ["jest", "node"],
    "moduleResolution": "node"
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}